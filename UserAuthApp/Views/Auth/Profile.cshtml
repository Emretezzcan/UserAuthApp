@{
    ViewData["Title"] = "Profilim";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0 rounded-4 p-4">
                <h2 class="text-center mb-4 text-primary">👤 Profil Bilgileri</h2>

                <div class="mb-3">
                    <label class="form-label fw-bold text-secondary">👤 Kullanıcı Adı</label>
                    <div class="form-control bg-light">@ViewBag.Name</div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold text-secondary">📧 E-posta</label>
                    <div class="form-control bg-light">@ViewBag.Email</div>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <a asp-action="ChangePassword" class="btn btn-outline-warning btn-lg">🔐 Şifre Değiştir</a>
                    <a asp-controller="Task" asp-action="Index" class="btn btn-outline-secondary btn-lg">⬅️ Görevlerime Dön</a>
                </div>
            </div>

        </div>
    </div>
</div>
