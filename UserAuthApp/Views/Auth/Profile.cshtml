@{
    ViewData["Title"] = "Profilim";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow p-4">
                <h2 class="text-center mb-4">👤 Profil Bilgileri</h2>

                <div class="mb-3">
                    <label class="form-label"><strong>👤 Kullanıcı Adı:</strong></label>
                    <div class="form-control bg-light">@ViewBag.Name</div>
                </div>

                <div class="mb-3">
                    <label class="form-label"><strong>📧 E-posta:</strong></label>
                    <div class="form-control bg-light">@ViewBag.Email</div>
                </div>

                <div class="d-grid gap-2">
                    <a asp-action="ChangePassword" class="btn btn-warning">🔐 Şifre Değiştir</a>
                    <a asp-controller="Task" asp-action="Index" class="btn btn-secondary">⬅️ Görevlerime Dön</a>
                </div>
            </div>

        </div>
    </div>
</div>
