@model UserAuthApp.Models.User
@{
    ViewData["Title"] = "Kayıt Ol";
}

<h2>Kayıt Ol</h2>

<form asp-action="Register" method="post" class="w-50">
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PasswordHash" class="form-label">Şifre</label>
        <input asp-for="PasswordHash" type="password" class="form-control" id="registerPassword" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>

        <div class="form-check mt-1">
            <input type="checkbox" class="form-check-input" id="showPasswordCheck" />
            <label class="form-check-label" for="showPasswordCheck">Şifreyi Göster</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>

<div class="mt-3">
    Zaten hesabınız var mı? <a asp-controller="Auth" asp-action="Login">Giriş yap</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.getElementById("showPasswordCheck").addEventListener("change", function () {
            var input = document.getElementById("registerPassword");
            input.type = this.checked ? "text" : "password";
        });
    </script>
}