@model UserAuthApp.Models.User

@{
    ViewData["Title"] = "Şifre Güncelle";
}
<h2>Şifre Güncelle</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

<form asp-action="ChangePassword" method="post" class="w-50">
    <div class="mb-3">
        <label>Mevcut Şifre</label>
        <input type="password" name="currentpassword" class="form-control" required/>
    </div>
    <div class="mb-3">
        <label>Yeni Şifre</label>
        <input asp-for="NewPassword" type="password" class="form-control" required/>

    </div>
    <button type="submit" class="btn-primary">Güncelle</button>
    </form>
<p class="mt-3">
    <a asp-action="Welcome" class="btn btn-secondary">⬅️ Geri Dön</a>
</p>

